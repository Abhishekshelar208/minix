{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "ProjectSpaces": {
      ".indexOn": ["ownerId"],
      "$projectSpaceId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || !data.exists())",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || (!data.exists() && newData.child('ownerId').val() === auth.uid))"
      }
    },
    "Roadmaps": {
      ".indexOn": ["projectSpaceId", "ownerId"],
      "$roadmapId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || !data.exists())",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || (!data.exists() && newData.child('ownerId').val() === auth.uid))"
      }
    },
    "RoadmapTasks": {
      "$roadmapId": {
        "$taskId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "Projects": {
      "$projectId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || !data.exists())",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || (!data.exists() && newData.child('ownerId').val() === auth.uid))"
      }
    },
    "Bookmarks": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}